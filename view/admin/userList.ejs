    <script>
        // Function to handle button click
        function handleButtonClick(event) {
            const clickedButton = event.target;

            // Check if the clicked element has the "myButton" class
            if (clickedButton.classList.contains('myButton')) {
                const buttonId = clickedButton.getAttribute('data-button-id');
                const storedState = localStorage.getItem(buttonId) || 'block';

                // Toggle the button text
                if (storedState === 'block') {
                    clickedButton.textContent = 'blocked!';
                    localStorage.setItem(buttonId, 'Clicked!');
                } else {
                    clickedButton.textContent = 'block';
                    localStorage.setItem(buttonId, 'block');
                }
            }
        }

        // Add a click event listener to the document to handle all button clicks
        document.addEventListener('click', handleButtonClick);

        // Initialize button text based on stored states
        const buttons = document.querySelectorAll('.myButton');
        buttons.forEach((button) => {
            const buttonId = button.getAttribute('data-button-id');
            const storedState = localStorage.getItem(buttonId);
            if (storedState === 'Clicked!') {
                button.textContent = 'Blocked!';
            } else {
                button.textContent = 'block';
            }
        });
    </script>

