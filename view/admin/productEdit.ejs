    <script>
        function validateForm() {
            const form = document.getElementById('productForm');
            const name = form.elements.name.value;
            const brandName = form.elements.brandName.value;
            const image = form.elements.image.files;
            const category = form.elements.category.value;
            const price = form.elements.price.value;
            const salesPrice = form.elements.salesPrice.value;
            const GST = form.elements.GSD.value; // Correct the name from "GSD" to "GST"
            const quantity = form.elements.quantity.value;
            const numbersOnlyRegex = /^\d+$/;
            const nameRegex = /^[A-Za-z].*/; // Regular expression to check if the name doesn't start with a number

            if ((!name || !name.trim()) && (!brandName || !brandName.trim())) {
                Swal.fire({
                    icon: 'error',
                    title: 'Validation Error',
                    text: 'No vacant place is allowed for Product Name and Brand Name',
                });
                return false;
            } else if (!name || !name.trim()) {
                Swal.fire({
                    icon: 'error',
                    title: 'Invalid Product Name',
                    text: 'Product Name should not be empty and should not start with a number',
                });
                return false;
            } else if (!brandName || !brandName.trim()) {
                Swal.fire({
                    icon: 'error',
                    title: 'Invalid Brand Name',
                    text: 'Brand Name should not be empty and should not start with a number',
                });
                return false;
            } else if (!name.match(nameRegex)) {
                Swal.fire({
                    icon: 'error',
                    title: 'Invalid Product Name',
                    text: 'Product Name should not start with a number',
                });
                return false;
            } else if (!brandName.match(nameRegex)) {
                Swal.fire({
                    icon: 'error',
                    title: 'Invalid Brand Name',
                    text: 'Brand Name should not start with a number',
                });
                return false;


            } else if (!validateImageType(image)) {
                Swal.fire({
                    icon: 'error',
                    title: 'Invalid Image Type',
                    text: 'Please select a valid image (e.g., JPEG or PNG)',
                });
                return false;
            } else if (!validateImageSize(image)) {
                Swal.fire({
                    icon: 'error',
                    title: 'Image Size Exceeded',
                    text: 'Please select an image that is less than 5MB',
                });
                return false;
            } else if (!price.match(numbersOnlyRegex) || !salesPrice.match(numbersOnlyRegex) || !GST.match(numbersOnlyRegex) || !quantity.match(numbersOnlyRegex)) {
                Swal.fire({
                    icon: 'error',
                    title: 'Invalid Field Values',
                    text: 'Price, Sales Price, GST, and Quantity must contain only numbers',
                });
                return false;
            } else if (parseFloat(price) < 1 || parseFloat(salesPrice) < 1 || parseFloat(GST) < 1 || parseInt(quantity) < 1) {
                Swal.fire({
                    icon: 'error',
                    title: 'Invalid Field Values',
                    text: 'Price, Sales Price, GST, and Quantity must be less than 1',
                });


                return false;
            }
            // Form is valid, you can submit the form
            return true;
        }

        function validateImageType(files) {
            const allowedTypes = ['image/jpeg', 'image/png', 'image/jpg'];
            for (const file of files) {
                if (!allowedTypes.includes(file.type)) {
                    return false;
                }
            }
            return true;
        }

        function validateImageSize(files) {
            const maxSize = 5 * 1024 * 1024; // 5MB in bytes
            for (const file of files) {
                if (file.size > maxSize) {
                    return false;
                }
            }
            return true;
        }
    </script>

